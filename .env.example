# Multi-Agent Smart Factory Environment Variables
# Copy this file to .env and fill in your actual values

# ========================================
# GitHub Repository Settings (for CI/CD)
# ========================================
# These are automatically set by GitHub Actions, but you can override for local development
# GITHUB_TOKEN=your_github_token_here
# GITHUB_REPOSITORY=your-username/multi-agent-smart-factory

# ========================================
# API Keys for AI Services (Required)
# ========================================
# OpenAI GPT
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Naver Clova
CLOVA_API_KEY=your_clova_api_key_here
CLOVA_API_SECRET=your_clova_api_secret_here

# ========================================
# Database Configuration
# ========================================
# MySQL Database
DATABASE_URL=mysql+aiomysql://root:password@localhost:3306/multichat
MYSQL_ROOT_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=multichat
MYSQL_USER=root

# ========================================
# Redis Configuration
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ========================================
# Kafka Configuration
# ========================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=smart_factory_group
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLED=true

# ========================================
# Elasticsearch Configuration
# ========================================
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# ========================================
# Application Settings
# ========================================
# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security
SECRET_KEY=your_secret_key_for_jwt_here
ADMIN_API_KEY=your_admin_api_key_here
USER_API_KEY=your_user_api_key_here

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ========================================
# File Storage and Data Paths
# ========================================
DATA_PATH=./data
EMBEDDINGS_PATH=./data/embeddings
CHROMADB_PATH=./data/embeddings/chromadb
UPLOAD_PATH=./uploads
LOG_PATH=./logs

# ========================================
# External Services (Optional)
# ========================================
# Azure (if using Azure services)
AZURE_CONNECTION_STRING=your_azure_connection_string_here

# AWS (if using AWS services)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# ========================================
# Monitoring and Alerting (Optional)
# ========================================
# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Slack notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_CHANNEL=#smart-factory-alerts

# Email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# ========================================
# Docker & Container Registry
# ========================================
# Container Registry (GitHub Container Registry by default)
REGISTRY=ghcr.io
IMAGE_NAME=multi-agent-smart-factory

# ========================================
# Kubernetes & Deployment (Production)
# ========================================
# Kubernetes namespace
K8S_NAMESPACE=smart-factory

# Load balancer or ingress domain
DOMAIN_NAME=smart-factory.local

# Resource limits
MAX_MEMORY=1Gi
MAX_CPU=500m
MIN_MEMORY=512Mi
MIN_CPU=250m

# ========================================
# Feature Flags
# ========================================
# Enable/disable specific features
ENABLE_HOLE_DETECTION=true
ENABLE_KAFKA_CONSUMER=true
ENABLE_PDF_GENERATION=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# ========================================
# Performance & Scaling
# ========================================
# Connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
REDIS_CONNECTION_POOL_SIZE=10

# Request limits
MAX_REQUEST_SIZE=10MB
REQUEST_TIMEOUT=30
RATE_LIMIT_PER_MINUTE=100

# Worker settings
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000

# ========================================
# Development & Testing
# ========================================
# Testing database (separate from production)
TEST_DATABASE_URL=mysql+aiomysql://root:password@localhost:3306/multichat_test

# Mock API keys for testing (if needed)
MOCK_API_TESTING=false

# ========================================
# Backup & Recovery
# ========================================
# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# ========================================
# SSL/TLS Configuration (Production)
# ========================================
# SSL certificate paths
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/private.key
SSL_CA_PATH=/path/to/ca.pem

# Force HTTPS redirect
FORCE_HTTPS=false